{
  "main": "./dist/extension.cjs",
  "module": "index.ts",
  "type": "module",
  "name": "amodh-todo",
  "version": "0.0.1",
  "description": "A todo list for VSCode",
  "displayName": "Amodh's TODO",
  "scripts": {
    "dev": "echo 'Open this directory in VSCode and then run your extension with F5 or `Run and Debug > Run Extension`!'",
    "build": "bun run ./scripts/build-with-esbuild.ts",
    "watch": "bun run ./scripts/watch-with-esbuild.ts",
    "vsce-package": "bun run vsce package --allow-star-activation",
    "package": "bun run build && bun run vsce-package",
    "clean": "rm -r ./dist",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "activationEvents": [
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/amodhakal/todo"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "dependencies": {
    "@types/vscode": "^1.86.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@vscode/vsce": "^2.23.0",
    "esbuild": "^0.20.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
